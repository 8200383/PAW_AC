<!-- Projects table (small breakpoint and up) -->
<div class="align-middle inline-block min-w-full border-b border-gray-200">
    <table class="min-w-full">
        <thead>
        <tr class="border-t border-gray-200">
            <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <span class="lg:pl-2">Project</span>
            </th>
            <th class="pr-6 py-3 border-b border-gray-200 bg-gray-50 text-right text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
        </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-100">
        <tr>
            <td class="px-6 py-3 whitespace-nowrap text-sm text-gray-800">
                March 17, 2020
            </td>

            <td class="pr-6">
                <div class="relative flex justify-end items-center space-x-2">
                    <% [
                        { label: 'View', color: 'bg-indigo-100 hover:bg-indigo-200 text-indigo-800' },
                        { label: 'Edit', color: 'bg-yellow-100 hover:bg-yellow-200 text-yellow-800 ' },
                        { label: 'Delete', color: 'bg-red-100 hover:bg-red-200 text-red-800' },
                    ].forEach(function(action) { %>
                        <button type="button"
                                class="inline-flex text-xs font-medium px-2.5 py-0.5 rounded <%= action.color %>">
                            <span><%= action.label %></span>
                        </button>
                    <% }) %>
                </div>
            </td>
        </tr>

        <!-- More projects... -->
        </tbody>
    </table>
</div>